{
  "name": "@pandoks.com/clickhouse",
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:clickhouse & pnpm run build:keeper & pnpm run build:helm & wait",
    "docker:build": "pnpm run build",
    "build:clickhouse": "docker build -f ./clickhouse/Dockerfile ../../ -t localhost:12345/clickhouse:latest",
    "build:keeper": "docker build -f ./keeper/Dockerfile ../../ -t localhost:12345/clickhouse-keeper:latest",
    "build:backup": "docker build -f ./backup/Dockerfile ../../ -t localhost:12345/clickhouse-backup:latest",
    "build:helm": "helm package ./chart",
    "dev:push": "pnpm run dev:push:clickhouse & pnpm run dev:push:keeper & pnpm run dev:push:helm & wait",
    "dev:push:clickhouse": "docker push localhost:12345/clickhouse:latest",
    "dev:push:keeper": "docker push localhost:12345/clickhouse-keeper:latest",
    "dev:push:backup": "docker push localhost:12345/clickhouse-backup:latest",
    "dev:push:helm": "helm push clickhouse-*.tgz oci://localhost:12345/charts"
  }
}
