{
  "name": "pandoks.com",
  "version": "1.0.0",
  "packageManager": "pnpm@10.8.1",
  "type": "module",
  "scripts": {
    "dev": "sst dev",
    "deps:up": "docker compose -f ./docker-compose.yaml -p deps up -d",
    "deps:down": "docker compose -f ./docker-compose.yaml -p deps down",
    "setup": "pnpm run deps:up && pnpm run cluster:create --network pandoks-net && pnpm run cluster:setup --network pandoks-net",
    "teardown": "pnpm run cluster:delete && pnpm run deps:down",
    "sso": "aws sso login --sso-session=Pandoks_",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "shadcn": "pnpm dlx shadcn-svelte@latest add $@ -c packages/svelte",
    "deploy": "sst deploy",
    "clean": "pnpm -r run clean",
    "cluster:create": "./scripts/cluster.sh k3d-up",
    "cluster:delete": "./scripts/cluster.sh k3d-down",
    "cluster:setup": "./scripts/cluster.sh setup --k3d",
    "cluster:example": "kubectl apply -f ./k3s/base/example.yaml & ./scripts/cluster.sh secrets",
    "cluster:deploy": "kubectl kustomize ./k3s/dev --load-restrictor LoadRestrictionsNone --enable-helm | kubectl apply -f - & ./scripts/cluster.sh secrets",
    "k3s:remote": "pnpm run ssh:copy --remote-file /etc/rancher/k3s/k3s.yaml",
    "k3s:setup": "./scripts/cluster.sh setup --kubeconfig ./k3s.yaml",
    "k3s:example": "kubectl --kubeconfig ./k3s.yaml apply -f ./k3s/base/example.yaml & ./scripts/cluster.sh secrets --kubeconfig ./k3s.yaml",
    "k3s:deploy": "kubectl --kubeconfig ./k3s.yaml apply -k ./k3s --load-restrictor LoadRestrictionsNone & ./scripts/cluster.sh secrets --kubeconfig ./k3s.yaml",
    "ssh:copy": "./scripts/ssh.sh copy",
    "ssh:tunnel": "./scripts/ssh.sh tunnel --local-port 6443 --remote-port 6443",
    "ssh:stop": "./scripts/ssh.sh stop-tunnel",
    "ssh:status": "./scripts/ssh.sh status"
  },
  "devDependencies": {
    "glob": "^11.0.3",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "sst": "^3.17.12"
  }
}
