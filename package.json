{
  "name": "pandoks.com",
  "version": "1.0.0",
  "packageManager": "pnpm@10.8.1",
  "scripts": {
    "dev": "sst dev",
    "setup": "docker compose -f ./setup.yaml -p setup up && pnpm run cluster:init",
    "sso": "aws sso login --sso-session=Pandoks_",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "shadcn": "pnpm dlx shadcn-svelte@latest add $@ -c packages/svelte",
    "deploy": "sst deploy",
    "clean": "pnpm -r run clean",
    "cluster:create": "./k3s/cluster.sh create",
    "cluster:delete": "./k3s/cluster.sh delete",
    "cluster:setup": "./k3s/cluster.sh setup",
    "cluster:init": "pnpm run cluster:create && pnpm run cluster:setup"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "sst": "^3.17.10"
  }
}
