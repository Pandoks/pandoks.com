{
  "name": "pandoks.com",
  "version": "1.0.0",
  "packageManager": "pnpm@10.8.1",
  "type": "module",
  "scripts": {
    "sso": "aws sso login --sso-session=Pandoks_",
    "cluster": "./scripts/cluster/main.sh",
    "dev": "sst dev",
    "dev:init": "pnpm run cluster k3d deps up && pnpm run cluster k3d up --network pandoks-net && pnpm run cluster setup --k3d",
    "dev:destroy": "pnpm run cluster k3d down && pnpm run cluster k3d deps down",
    "dev:push": "pnpm -r run dev:push",
    "dev:deploy": "kubectl kustomize ./k3s/dev --load-restrictor LoadRestrictionsNone --enable-helm | kubectl apply -f -",
    "docker:build": "pnpm -r run docker:build",
    "k3s:remote": "pnpm run ssh:copy --remote-file /etc/rancher/k3s/k3s.yaml",
    "k3s:setup": "./scripts/cluster/main.sh setup --kubeconfig ./k3s.yaml",
    "k3s:secrets": "./scripts/cluster/main.sh push-secrets --kubeconfig ./k3s.yaml",
    "k3s:deploy": "kubectl --kubeconfig ./k3s.yaml apply -k ./k3s/apps --load-restrictor LoadRestrictionsNone",
    "ssh:copy": "./scripts/ssh.sh copy",
    "ssh:tunnel": "./scripts/ssh.sh tunnel --local-port 6443 --remote-port 6443",
    "ssh:stop": "./scripts/ssh.sh stop-tunnel",
    "ssh:status": "./scripts/ssh.sh status",
    "shadcn": "pnpm dlx shadcn-svelte@latest add $@ -c packages/svelte",
    "clean": "pnpm -r run clean",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "devDependencies": {
    "glob": "^11.1.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "sst": "^3.17.12"
  }
}
