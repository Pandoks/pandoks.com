{
  "name": "pandoks.com",
  "version": "1.0.0",
  "packageManager": "pnpm@10.8.1",
  "type": "module",
  "scripts": {
    "sso": "aws sso login --sso-session=Pandoks_",
    "dev": "sst dev",
    "setup": "pnpm run deps:up && pnpm run cluster:create --network pandoks-net && pnpm run cluster:setup --network pandoks-net",
    "teardown": "pnpm run cluster:delete && pnpm run deps:down",
    "deps:up": "docker compose -f ./docker-compose.yaml -p deps up -d",
    "deps:down": "docker compose -f ./docker-compose.yaml -p deps down",
    "cluster:create": "./scripts/cluster.sh k3d-up",
    "cluster:delete": "./scripts/cluster.sh k3d-down",
    "cluster:start": "k3d cluster start local-cluster",
    "cluster:stop": "k3d cluster stop local-cluster",
    "cluster:restart": "pnpm run cluster:stop && pnpm run cluster:start",
    "cluster:setup": "./scripts/cluster.sh setup --k3d",
    "cluster:build": "pnpm -r run cluster:build",
    "cluster:push": "pnpm -r run cluster:push",
    "cluster:example": "kubectl apply -f ./k3s/apps/example.yaml & ./scripts/cluster.sh secrets & wait",
    "cluster:deploy": "kubectl kustomize ./k3s/dev --load-restrictor LoadRestrictionsNone --enable-helm | kubectl apply -f -",
    "cluster:secrets": "./scripts/cluster.sh secrets",
    "k3s:remote": "pnpm run ssh:copy --remote-file /etc/rancher/k3s/k3s.yaml",
    "k3s:setup": "./scripts/cluster.sh setup --kubeconfig ./k3s.yaml",
    "k3s:example": "kubectl --kubeconfig ./k3s.yaml apply -f ./k3s/apps/example.yaml & ./scripts/cluster.sh secrets --kubeconfig ./k3s.yaml & wait",
    "k3s:deploy": "kubectl --kubeconfig ./k3s.yaml apply -k ./k3s/apps --load-restrictor LoadRestrictionsNone",
    "k3s:secrets": "./scripts/cluster.sh secrets --kubeconfig ./k3s.yaml",
    "ssh:copy": "./scripts/ssh.sh copy",
    "ssh:tunnel": "./scripts/ssh.sh tunnel --local-port 6443 --remote-port 6443",
    "ssh:stop": "./scripts/ssh.sh stop-tunnel",
    "ssh:status": "./scripts/ssh.sh status",
    "shadcn": "pnpm dlx shadcn-svelte@latest add $@ -c packages/svelte",
    "deploy": "sst deploy",
    "clean": "pnpm -r run clean",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "devDependencies": {
    "glob": "^11.1.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "sst": "^3.17.12"
  }
}
